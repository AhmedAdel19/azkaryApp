<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/azkarElSabahBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTxt"
                android:textSize="22dp"
                android:background="@drawable/orange_cycle"
                android:layout_alignParentRight="true"
                android:text="اذكار الصباح" />
            <Button
                android:id="@+id/azkarElMasaaBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTxt"
                android:textSize="22dp"
                android:background="@drawable/blue_color"
                android:layout_marginLeft="90dp"
                android:text="اذكار المساء" />



        </LinearLayout>




        <Button
            android:id="@+id/azkarb3dElSalahBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:textSize="22dp"
            android:background="@drawable/purple_color"
            android:layout_gravity="center_horizontal"
           android:layout_marginTop="25dp"
            android:text="اذكار بعد الصلاه " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/qor2anBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textSize="22dp"
                android:background="@drawable/green_color"
                android:layout_marginTop="45dp"
                android:layout_alignParentRight="true"
                android:text="القرأن الكريم" />
            <Button
                android:id="@+id/W2tBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textSize="22dp"
                android:background="@drawable/red_color"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="90dp"
                android:text="اوقات الصلاه" />



        </LinearLayout>

        <Button
            android:id="@+id/azkarFavouritesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteTxt"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_cycle"
            android:layout_alignParentRight="true"
            android:text="المفضلات" />




    </LinearLayout>




</RelativeLayout>